<Page
    x:Class="EMR.Views.Pages.StaffPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EMR.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:EMR.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="StaffPage"
    d:DataContext="{d:DesignInstance local:StaffPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid  Name="dgGrid" Grid.Column= "0">
            <DataGrid x:Name="dgStaff" ItemsSource="{Binding ViewModel.Staffs, Mode=OneWay}"/>
        </Grid>

        <Grid x:Name="searchGrid" Grid.Column= "1">
            <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="57,75,57,75" x:Name="listView1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Img">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Width="60" Height="60" Source="{Binding UserImg}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Age" DisplayMemberBinding="{Binding UserAge}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="btnTest1" Content="Button" HorizontalAlignment="Right" Margin="0,24,50,0" VerticalAlignment="Top" Click="btnTest1_Click" />
        </Grid>
    </Grid>
</Page>
